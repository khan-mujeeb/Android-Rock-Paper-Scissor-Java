<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="162dp"
            android:layout_height="250dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="1dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titleUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/player"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/playerLogo"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:contentDescription="@string/user_pic"
                app:srcCompat="@drawable/boy"
                tools:srcCompat="@drawable/boy" />

            <TextView
                android:id="@+id/playerScore"
                android:layout_width="match_parent"
                android:layout_height="102dp"
                android:gravity="center"
                android:textSize="50sp"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/computerId"
            android:layout_width="162dp"
            android:layout_height="250dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="1dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titleComputer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/computer"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/computerLogo"
                android:layout_width="match_parent"
                android:layout_height="123dp"
                android:contentDescription="@string/computer_pic"
                app:srcCompat="@drawable/comp"
                tools:ignore="ImageContrastCheck"
                tools:srcCompat="@drawable/comp" />

            <TextView
                android:id="@+id/computerScore"
                android:layout_width="match_parent"
                android:layout_height="101dp"
                android:gravity="center"
                android:textSize="50sp"
                android:text="" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/play"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:text="@string/play" />

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:text=""
        android:textSize="50sp"
        android:textStyle="bold" />
</LinearLayout>